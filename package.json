{
  "name": "gclauncher",
  "private": true,
  "version": "1.0.1",
  "description": "A game launcher that has the ability to download games from torrent and integrate them to the library",
  "author": "GC Launcher",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none vite\" \"wait-on tcp:5173 && electron .\"",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:win:portable": "vite build && electron-builder --win portable",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^11.0.2",
    "howlongtobeat-api": "^1.0.3",
    "jdownloader-api": "^1.1.4",
    "node-7z": "^3.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sharp": "^0.34.5",
    "vdf": "^0.0.2",
    "webtorrent": "^2.8.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^13.24.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.gclauncher.app",
    "productName": "GC Game Launcher",
    "copyright": "Copyright Â© 2025",
    "directories": {
      "output": "dist-build",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "public/logo.png",
      "public/steam-logo-transparent.png"
    ],
    "extraFiles": [
      {
        "from": "electron/bin/7z",
        "to": "electron/bin/7z",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "build/wireguard/wireguard-installer.msi",
        "to": "wireguard-installer.msi",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "GC Launcher",
      "requestedExecutionLevel": "highestAvailable",
      "executableName": "gclauncher"
    },
    "compression": "normal",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GC Game Launcher",
      "include": "build/installer.nsh",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Games",
      "artifactName": "gclauncher-setup-${version}.${ext}",
      "selectPerMachineByDefault": true,
      "uninstallerIcon": null,
      "installerIcon": null
    }
  }
}
