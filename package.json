{
  "name": "gclauncher",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none vite\" \"wait-on tcp:5173 && electron .\"",
    "build": "vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^11.0.2",
    "node-7z": "^3.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "vdf": "^0.0.2",
    "webtorrent": "^2.8.4"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^13.24.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.gclauncher.app",
    "productName": "GC Game Launcher",
    "directories": {
      "output": "dist-build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "public/logo.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/logo.png"
    },
    "icon": "public/logo.png"
  }
}
